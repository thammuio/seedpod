<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header" style="text-align: center;">Plan Detail
    </h3>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-lg-12">
          <div class="form-group">
            <label>Title :</label>
            <%= @plan.title %>
          </div>
          <div class="form-group">
            <label>Description :</label>
            <div style="text-align: justify;"><%= @plan.body %></div>
          </div>
          <a href="<%= edit_student_course_plan_path(@student_course.id, @plan) %>" class="btn btn-primary">Edit Plan</a>
          <%= link_to "Back", :back, :class=>"btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-5 col-md-offset-3">
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover all_student">
        <thead>
          <tr>
            <th>Plan assigned to these teams</th>
          </tr>
        </thead>
        <tbody>
          <% @plan.teams.each do |plan_team| %>
            <tr>
              <td>
                <%= link_to plan_team.name, student_course_team_path(@student_course, plan_team) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>