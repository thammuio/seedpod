<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        Student Reset New Password
      </div>
      <div class="panel-body">
        <fieldset>
          <%= form_for @student, :url => password_reset_path(params[:id]) do |f| %>
            <% if @student.errors.any? %>
              <div class="error_messages">
                <ul>
                  <% for message in @student.errors.full_messages %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.password_field :password, :placeholder => "Enter new password", :class => "form-control placeholder-no-fix" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, :placeholder => "Enter password confirmation", :class => "form-control placeholder-no-fix" %>
            </div>
            <div class="actions"><%= f.submit "Update Password", :class => "btn btn-primary" %></div>
          <% end %>
        </fieldset>
      </div>
    </div>
    <h3>
      <small>Go back to  <a href="<%= root_url %>">Home</a></small>
    </h3>
  </div>
</div>