<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        Forgot Password
      </div>
      <%= devise_error_messages! %>
      <div class="panel-body">
        <fieldset>
          <%= form_tag password_resets_path, :id => "reset_password", :method => :post do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= email_field_tag :email, params[:email], :class => "form-control", :placeholder => "Enter email", :required => true %>
            </div>
            <%= submit_tag "Reset Password", :class => "btn btn-primary" %>
          <% end %>
        </fieldset>
      </div>
    </div>
    <h3>
      <small>Go back to  <a href="<%= root_url %>">Home</a></small>
    </h3>
  </div>
</div>
<script type="text/javascript">
  $("#reset_password").validate();
</script>