<div class="row" >
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <!-- <div class="panel-heading">
        <h3 class="panel-title" style="padding: 0px 0px;">Student Sign In</h3>
      </div> -->
      <div class="panel-body">
        <fieldset>
          <%= form_tag student_session_create_path, :id => "student_sign_in" do %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <label class="control-label visible-ie8 visible-ie9">Email </label>
              <%= email_field_tag :email, nil, :class => "form-control", :required => true, :placeholder => "Enter Email" %>
            </div>
            <div class="form-group">
              <label class="control-label visible-ie8 visible-ie9">Password</label>
              <%= password_field_tag :password, nil, :class => "form-control", :required => true, :placeholder => "Enter Password" %>
            </div>
            <%= submit_tag "Sign in", class: "btn btn-lg btn-success btn-block" %>
          <% end %>
        </fieldset>
      </div>
    </div>
    <h4>
      <small>Go back to  <a href="<%= root_url %>">Home</a></small>
      <small class="pull-right" style="margin-top: 3px;">Forgot Password <a href="<%= new_password_reset_path %>">Click Me</a></small>
    </h4>
  </div>
</div>
<script type="text/javascript">
  $("#student_sign_in").validate();
  
</script>