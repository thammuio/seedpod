<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">
      Change Password
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-6">
    <%= form_for @faculty, :as=> :user, :url => { :action => "update_password"} ,:html => {:id => "change_password" } do |f| %>
      <div class="form-group">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password,:required => true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password" %><br />
        <%= f.password_field :password, :autocomplete => "off", :required => true,minlength: 7, :class => "form-control", :id => "password"  %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation ,:required => true ,minlength: 7, :class => "form-control", :id => "password" %>
      </div>
      <div class="action_container">
        <%= f.submit 'Change Password', :class => 'btn btn-primary' %>
        <%= link_to "Cancel", "/faculty", :class => "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $("#change_password").validate({
    rules: {
      password: {
        required: true
      },
      password: {
        required: true,
        minlength: 7
      },
      password_confirmation: {
        required: true,
        minlength: 7,
        equalTo: "#password"
      }
    }
  });
</script>