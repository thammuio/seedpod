<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-1">
          </div>
          <div class="col-lg-10">
            <%= form_for(@student_course, :html => { :id => "new_course" }) do |f| %>
              <% if @student_course.errors.any? %>
                <div class="alert alert-danger">
                  <ul>
                  <% @student_course.errors.full_messages.each do |msg| %>
                    <li style="list-style-type: none;"><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-body">
                <div class="form-group">
                  <label for="course_id">Course Id</label>
                  <%= f.text_field :course_id, :class => "form-control", :placeholder => "Enter Course Id", :required => true %>
                  <%#= @student_course.errors.messages[:course_id].join(" ") %>
                </div>
                <div class="form-group">
                  <label for="course_name">Course Name</label>
                  <%= f.text_field :course_name, :class => "form-control", :placeholder => "Enter Course Nane", :required => true %>
                  <%#= @student_course.errors.messages[:course_name].join(" ") %>
                </div>
                <div class="form-group">
                  <label>Course Description</label>
                  <%= f.text_area :description, :class => "form-control", :placeholder => "Enter Course Description", :rows => "4", :required => true %>
                  <%#= @student_course.errors.messages[:description].join(" ") %>
                </div>
              </div>
              <% if params[:controller] == "student_courses" && params[:action] == "new" || params[:controller] == "student_courses" && params[:action] == "create" %>
                <%= f.submit "Create Course", :class => 'btn btn-primary' %>
              <% elsif params[:controller] == "student_courses" && params[:action] == "edit" %>
                <%= f.submit "Update Course", :class => 'btn btn-primary' %>
                <%= link_to 'Back', student_course_path(@student_course), :class => "btn btn-default" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#new_course").validate();
</script>