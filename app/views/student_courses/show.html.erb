<div class="row">
  <div class="col-lg-12">
    <h4 class="page-header">
      <small><%= @student_course.course_id %> - <%= @student_course.course_name %> <i class="fa fa-chevron-right"></i> </small> Teams Involved
      <span class="pull-right">
        <%= link_to 'Edit Course', edit_student_course_path(@student_course), :class => "btn btn-outline btn-primary btn-xs" %>
        <%= link_to 'View Courses', "/faculty", :class => "btn btn-outline btn-primary btn-xs" %>
      </span>
    </h4>
  </div>
</div>
<% if @teams.blank? %>
  <h2 style="margin-top: 17%; margin-left: 17%;">No team found for <u><%= @student_course.course_name %></u>. <small>
      <a href="<%= new_student_course_team_path(@student_course.slug) %>" class="btn btn-outline btn-primary btn-sm" style="margin-bottom: 10px;"> Add Team</a>
    </small>
  </h2>
<% else %>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="teams">
              <thead>
                <tr>
                  <th>Team Name</th>
                </tr>
              </thead>
              <tbody>
                <% @teams.each do |u| %>
                  <tr class="gradeA odd">
                    <td class="sorting_1"><%= link_to u.name, student_course_team_path(@student_course, u) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% content_for :admin_faculty do %>
  <%= javascript_include_tag "jquery-1.10.2", "bootstrap", "jquery.metisMenu", "jquery.dataTables", "dataTables.bootstrap", "sb-admin", "jquery_ujs" %>
<% end %>
<script>
  $(document).ready(function() {
    $('#teams').dataTable();
  });
</script>