<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header" style="text-align: center;"><%= @task.title.upcase %></h3>
    <%= link_to "Back", :back, :class => "btn btn-primary pull-right" %>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-lg-12">
          <div class="form-group frozenstory">
            <label>Title</label> :
            <%= @task.title %>
          </div>
          <div class="form-group frozenstory">
            <label>Description</label> :
            <div style="text-align: justify;"><%= @task.description %></div>
          </div>
          <div class="form-group frozenstory">
            <label>Estimate</label> :
            <%= @task.estimate %>
          </div>
          <div class="form-group frozenstory">
            <label>Priority</label> :
            <%= @task.priority %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>