<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header" style="text-align: center;">Task Detail
    </h3>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-lg-12">
          <div class="form-group">
            <label>Title :</label>
            <%= @task.title %>
          </div>
          <div class="form-group">
            <label>Description :</label>
            <div style="text-align: justify;"><%= @task.description %></div>
          </div>
          <div class="form-group">
            <label>Estimate :</label>
            <%= @task.estimate %>
          </div>
          <div class="form-group">
            <label>Priority :</label>
            <%= @task.priority %>
          </div>
          <a href="<%= edit_tasks_path(@team.slug, @userstory.slug, @task.slug) %>" class="btn btn-primary">Edit Task</a>
          <%= link_to "Back", :back, :class=>"btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>